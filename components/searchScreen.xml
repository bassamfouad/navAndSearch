<component name = "SearchScreen" extends="Group">
    <children >
        <LayoutGroup translation="[120,120]" layoutDirection="horiz">
            <MiniKeyboard id = "miniKeyBoard" />
            <RowList 
               id = "simpleRowlist" 
               itemComponentName = "SearchResults" 
               numRows = "1" 
               itemSize = "[ 1608, 308 ]" 
               rowItemSize = "[ [536, 308] ]" 
               itemSpacing = "[ 0, 40 ]" 
               showRowLabel = "[ true ]" 
               drawFocusFeedback = "false" 
               vertFocusAnimationStyle = "fixedFocusWrap" 
               rowFocusAnimationStyle = "fixedFocusWrap" />
        </LayoutGroup>
    </children>
    <interface>
        <field id="hasFocus" type="bool" value="false" alwaysNotify="true"/>
    </interface>
    <script type="text/brightscript" uri="./searchScreen.brs" />
</component>

